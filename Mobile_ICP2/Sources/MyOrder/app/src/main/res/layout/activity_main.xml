<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dfdf"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:background="#D0FFFFFF"
        tools:context="com.example.vijaya.myorder.MainActivity">

        <EditText
            android:id="@+id/user_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:inputType="textCapWords" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_height="match_parent"
            android:text="@string/toppings" />

        <CheckBox
            android:id="@+id/cheese_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="Cheese"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/tomato_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="Tomato"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/pineaplle_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="PineApple"

            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/onion_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="Onion"

            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/meat_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="Meat"

            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/shrimp_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:paddingLeft="24dp"
            android:text="Shrimp"

            android:textSize="16sp" />

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="99dp" >

            <RadioButton
                android:id="@+id/small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Small" />

            <RadioButton
                android:id="@+id/medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium" />

            <RadioButton
                android:id="@+id/large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large" />
        </RadioGroup>

        <TextView
            style="@style/HeaderTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/quantity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:onClick="decrement"
                android:text="-" />

            <TextView
                android:id="@+id/quantity_text_view"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/initial_quantity_value"
                android:textColor="#000000" />

            <Button
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:onClick="increment"
                android:text="+" />
        </LinearLayout>

        <Button
            android:id="@+id/order_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order" />

        <Button
            android:id="@+id/summary_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary" />
    </LinearLayout>
</ScrollView>